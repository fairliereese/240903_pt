rule all:
    input:
        config['lr']['orfanage']['cds']

rule rm_sirv_ercc_gtf:
    input:
        gtf = config['lr']['gtf']
    resources:
        threads = 1,
        nodes = 2
    output:
        gtf = config['lr']['gtf_no_spike']
    run:
        rm_sirv_ercc_gtf(input.gtf, output.gtf)


use rule bed_to_fasta as gtf_to_t_fa with:
    input:
        bed = config['lr']['gtf_no_spike'],
        fa = config['ref']['fa']
    output:
        fa = config['lr']['t_fa']


